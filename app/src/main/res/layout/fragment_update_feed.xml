<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#00C79595"
    android:gravity="center"
    tools:context=".UpdateFeed">


    <ImageView
        android:id="@+id/back"
        android:layout_marginBottom="50dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:text="Modifier FeedBack"
        android:textStyle="bold"
        android:textSize="40sp"
        android:id="@+id/txt"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/et_user_id"
        android:hint=" Feedback ID "
        android:layout_width="250dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:textColorHint="@color/black"
        android:layout_height="45dp"/>

    <EditText
        android:id="@+id/et_updated_name"
        android:hint="Nom"
        android:layout_width="250dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:layout_height="45dp"/>

    <EditText
        android:id="@+id/et_updated_phone"
        android:hint="N° de Téléphone"
        android:layout_width="250dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:layout_height="45dp"/>

    <EditText
        android:id="@+id/et_updated_feed"
        android:hint="Avis"
        android:layout_width="250dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:layout_height="45dp"/>
    <Button
        android:id="@+id/btnUpdateUser"
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="Modifier"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/error"/>
</LinearLayout>