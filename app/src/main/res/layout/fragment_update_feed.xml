<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000000"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/txt"
        android:layout_marginBottom="22dp"
        android:src="@drawable/back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Update FeedBack"
        android:textStyle="bold"
        android:textSize="40sp"
        android:id="@id/txt"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/et_user_id"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/txt"
        android:background="@drawable/input"
        android:gravity="center"
        android:textColorHint="@color/black"
        android:hint="Feedback ID"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_updated_name"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/et_user_id"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input"
        android:gravity="center"
        android:hint="Updated Feedback Name"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_updated_username"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/et_updated_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input"
        android:gravity="center"
        android:hint="Updated Feedback Number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_updated_email"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/et_updated_username"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input"
        android:gravity="center"
        android:hint="Updated Feedback"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/btnUpdateUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_below="@id/et_updated_email"
        android:text="Update Feedback" />


</RelativeLayout>
